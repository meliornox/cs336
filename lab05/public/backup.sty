li {
  list-style-type: none;
}


    body {
        font: 24px Helvetica;
        background: #999999;
    }

    #main {
        min-height: 450px;
        margin: 0px;
        padding: 0px;
        display: flex;
        flex-flow: row;
    }

    #main > article {
        margin: 0px;
        padding: 20px;
        border: 2px solid #000;
        background: #dddd88;
        flex: 3 1 60%;
        order: 2;
    }

    #main > nav {
        margin: 0px;
        padding: 30px;
        border: 2px solid #000;
        background: #ccccff;
        flex: 1 6 20%;
        order: 1;
        text-align: right;
    }

    #main > aside {
	font-style: italic;
        margin: 0px;
        padding: 30px;
        border: 2px solid #000;
        background: #ccccff;
        flex: 1 6 20%;
        order: 3;
    }

    h1, footer {
        display: block;
        margin: 0px;
        padding: 30px;
        min-height: 60px;
        border: 2px solid #000;
        background: #ffeebb;
    }
    footer {
	font-size: 10px;
    }

    /* Too narrow to support three columns */
    @media all and (max-width: 640px) {
        #main, #page {
            flex-direction: column;
        }

        #main {
        min-height: 0px;
        }

        #main > nav {
        /* Return them to document order */
            text-align: left;
        }

        #main > article, #main > nav, #main > aside {
        /* Return them to document order */
            order: 0;
        }

	#main > article {
	    max-height: 200px;
	}

        #main > nav, #main > aside, header, footer {
            min-height: 30px;
            max-height: 75px;
        }
    }
